                <a href="https://www.instagram.com/mbeautylounge1?igsh=N3I0MWgwbWFxODhz" target="_blank" class="modal-option">@mbeautylounge1</a>
                <a href="https://www.instagram.com/muntaser_makkawi?igsh=cWZsNGFlbXB3YnB6" target="_blank" class="modal-option">@muntaser_makkawi</a>
                <a href="https://www.instagram.com/dmadeeha.makkawi?igsh=MWxhNjhhN2RyZmRhaQ==" target="_blank" class="modal-option">@dmadeeha.makkawi</a>
                <a href="https://www.instagram.com/ahmad_makkawi88?igsh=MWxyZHNxd2l3djk4bA==" target="_blank" class="modal-option">@ahmad_makkawi88</a>
            </div>
        </div>
    </div>

    <script>
        // بيانات الصور للمعرض
        const galleryImages = [
            {
                url: "https://i.imgur.com/3ZbkeT4.jpg",
                title_ar: "خدمات الميك أب الاحترافية",
                title_en: "Professional Makeup Services"
            },
            {
                url: "https://i.imgur.com/j2JCNMZ.jpg",
                title_ar: "أدوات تجميل عالية الجودة",
                title_en: "High Quality Beauty Tools"
            },
            {
                url: "https://i.imgur.com/buMgKMF.jpg",
                title_ar: "صالون التجميل الفاخر",
                title_en: "Luxurious Beauty Lounge"
            },
            {
                url: "https://i.imgur.com/IDCPzh3.jpg",
                title_ar: "جلسات العناية بالبشرة",
                title_en: "Skincare Sessions"
            }
        ];

        // بيانات الاتصال
        const contactData = {
            phones: ["0796281500", "0792281500"],
            facebook: "https://www.facebook.com/share/176ESgwXN2/?mibextid=wwXIfr",
            instagram: [
                {name: "@mbeautylounge1", url: "https://www.instagram.com/mbeautylounge1?igsh=N3I0MWgwbWFxODhz"},
                {name: "@muntaser_makkawi", url: "https://www.instagram.com/muntaser_makkawi?igsh=cWZsNGFlbXB3YnB6"},
                {name: "@dmadeeha.makkawi", url: "https://www.instagram.com/dmadeeha.makkawi?igsh=MWxhNjhhN2RyZmRhaQ=="},
                {name: "@ahmad_makkawi88", url: "https://www.instagram.com/ahmad_makkawi88?igsh=MWxyZHNxd2l3djk4bA=="}
            ],
            location: "https://share.google/ehQYW8vbZsq2x4bFdM",
            nfc: "https://www.instagram.com/futures_journey_programmingin?igsh=MTdkcXVkcjY3cGpwZA=="
        };

        // تهيئة المعرض
        let currentSlide = 0;
        const gallerySlider = document.getElementById('gallerySlider');
        const dotsContainer = document.getElementById('dotsContainer');

        function initGallery() {
            // إضافة الصور إلى المعرض
            galleryImages.forEach((image, index) => {
                const slide = document.createElement('div');
                slide.className = 'slide';
                slide.innerHTML = `
                    <img src="${image.url}" alt="Gallery Image ${index + 1}">
                    <div class="slide-overlay">
                        <h3 class="lang-text" data-ar="${image.title_ar}" data-en="${image.title_en}">${image.title_ar}</h3>
                    </div>
                `;
                gallerySlider.appendChild(slide);
                
                // إضافة النقاط
                const dot = document.createElement('div');
                dot.className = 'dot' + (index === 0 ? ' active' : '');
                dot.addEventListener('click', () => goToSlide(index));
                dotsContainer.appendChild(dot);
            });
            
            updateGallery();
        }

        function goToSlide(index) {
            currentSlide = index;
            updateGallery();
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % galleryImages.length;
            updateGallery();
        }

        function prevSlide() {
            currentSlide = (currentSlide - 1 + galleryImages.length) % galleryImages.length;
            updateGallery();
        }

        function updateGallery() {
            gallerySlider.style.transform = `translateX(-${currentSlide * 100}%)`;
            
            // تحديث النقاط النشطة
            document.querySelectorAll('.dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSlide);
            });
        }

        // تهيئة اختيار اللغة
        const arBtn = document.getElementById('ar-btn');
        const enBtn = document.getElementById('en-btn');
        const body = document.body;

        function switchLanguage(lang) {
            // تحديث أزرار اللغة
            arBtn.classList.toggle('active', lang === 'ar');
            enBtn.classList.toggle('active', lang === 'en');
            
            // تغيير اتجاه الصفحة
            if (lang === 'ar') {
                body.className = 'lang-ar';
                body.dir = 'rtl';
            } else {
                body.className = 'lang-en';
                body.dir = 'ltr';
            }
            
            // تحديث النصوص
            document.querySelectorAll('.lang-text').forEach(element => {
                const arText = element.getAttribute('data-ar');
                const enText = element.getAttribute('data-en');
                
                if (lang === 'ar' && arText) {
                    if (element.tagName === 'INPUT' || element.tagName === 'TEXTAREA') {
                        element.placeholder = arText;
                    } else {
                        element.innerHTML = arText;
                    }
                } else if (lang === 'en' && enText) {
                    if (element.tagName === 'INPUT' || element.tagName === 'TEXTAREA') {
                        element.placeholder = enText;
                    } else {
                        element.innerHTML = enText;
                    }
                }
            });
        }

        // التعامل مع النوافذ المنبثقة
        const phoneBtn = document.getElementById('phoneBtn');
        const facebookBtn = document.getElementById('facebookBtn');
        const instagramBtn = document.getElementById('instagramBtn');
        const locationBtn = document.getElementById('locationBtn');
        const nfcBtn = document.getElementById('nfcBtn');
        
        const phoneModal = document.getElementById('phoneModal');
        const instagramModal = document.getElementById('instagramModal');
        
        const closePhoneModal = document.getElementById('closePhoneModal');
        const closeInstagramModal = document.getElementById('closeInstagramModal');
        
        // فتح نافذة الهاتف
        phoneBtn.addEventListener('click', (e) => {
            e.preventDefault();
            phoneModal.style.display = 'flex';
        });
        
        // فتح فيسبوك مباشرة
        facebookBtn.addEventListener('click', (e) => {
            e.preventDefault();
            window.open(contactData.facebook, '_blank');
        });
        
        // فتح نافذة انستقرام
        instagramBtn.addEventListener('click', (e) => {
            e.preventDefault();
            instagramModal.style.display = 'flex';
        });
        
        // فتح الموقع مباشرة
        locationBtn.addEventListener('click', (e) => {
            e.preventDefault();
            window.open(contactData.location, '_blank');
        });
        
        // فتح NFC مباشرة
        nfcBtn.addEventListener('click', (e) => {
            e.preventDefault();
            window.open(contactData.nfc, '_blank');
        });
        
        // إغلاق النوافذ
        closePhoneModal.addEventListener('click', () => {
            phoneModal.style.display = 'none';
        });
        
        closeInstagramModal.addEventListener('click', () => {
            instagramModal.style.display = 'none';
        });
        
        // إغلاق النوافذ عند النقر خارجها
        window.addEventListener('click', (e) => {
            if (e.target === phoneModal) {
                phoneModal.style.display = 'none';
            }
            if (e.target === instagramModal) {
                instagramModal.style.display = 'none';
            }
        });
        
        // إضافة نفس المفاتيح للفوتر
        document.getElementById('footerFacebookBtn').addEventListener('click', (e) => {
            e.preventDefault();
            window.open(contactData.facebook, '_blank');
        });
        
        document.getElementById('footerInstagramBtn').addEventListener('click', (e) => {
            e.preventDefault();
            instagramModal.style.display = 'flex';
        });
        
        document.getElementById('footerLocationBtn').addEventListener('click', (e) => {
            e.preventDefault();
            window.open(contactData.location, '_blank');
        });

        // أحداث الأزرار
        document.getElementById('nextBtn').addEventListener('click', nextSlide);
        document.getElementById('prevBtn').addEventListener('click', prevSlide);
        
        // تبديل اللغة
        arBtn.addEventListener('click', () => switchLanguage('ar'));
        enBtn.addEventListener('click', () => switchLanguage('en'));
        
        // تبديل تلقائي للصور كل 5 ثوان
        setInterval(nextSlide, 5000);
        
        // التهيئة عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', () => {
            initGallery();
            switchLanguage('ar');
            
            // تنعيم التمرير للروابط الداخلية
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
