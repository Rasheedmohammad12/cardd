                {name: "mbeautylounge1", url: "https://www.instagram.com/mbeautylounge1?igsh=N3I0MWgwbWFxODhz"},
                {name: "muntaser_makkawi", url: "https://www.instagram.com/muntaser_makkawi?igsh=cWZsNGFlbXB3YnB6"},
                {name: "dmadeeha.makkawi", url: "https://www.instagram.com/dmadeeha.makkawi?igsh=MWxhNjhhN2RyZmRhaQ=="},
                {name: "ahmad_makkawi88", url: "https://www.instagram.com/ahmad_makkawi88?igsh=MWxyZHNxd2l3djk4bA=="}
            ],
            location: "https://share.google/ehQYW8vbZsq2x4bFd",
            nfc: "https://www.instagram.com/futures_journey_programmingin?igsh=MTdkcXVkcjY3cGpwZA=="
        };

        // تهيئة الموقع
        document.addEventListener('DOMContentLoaded', function() {
            // 1. تهيئة القائمة المتنقلة
            const menuBtn = document.getElementById('menuBtn');
            const mainNav = document.getElementById('mainNav');
            
            menuBtn.addEventListener('click', function() {
                mainNav.classList.toggle('active');
                menuBtn.innerHTML = mainNav.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });

            // 2. تهيئة معرض الصور
            initGallery();
            
            // 3. تهيئة أزرار الاتصال
            initContactButtons();
            
            // 4. التمرير السلس
            initSmoothScroll();
        });

        // معرض الصور
        let currentSlide = 0;
        
        function initGallery() {
            const gallerySlider = document.getElementById('gallerySlider');
            const galleryDots = document.getElementById('galleryDots');
            
            // إضافة الصور
            siteData.galleryImages.forEach((img, index) => {
                const slide = document.createElement('div');
                slide.className = 'slide';
                slide.innerHTML = `<img src="${img.url}" alt="${img.title}">`;
                gallerySlider.appendChild(slide);
                
                // إضافة النقاط
                const dot = document.createElement('div');
                dot.className = 'dot' + (index === 0 ? ' active' : '');
                dot.addEventListener('click', () => goToSlide(index));
                galleryDots.appendChild(dot);
            });
            
            // أحداث الأزرار
            document.getElementById('prevBtn').addEventListener('click', prevSlide);
            document.getElementById('nextBtn').addEventListener('click', nextSlide);
            
            // التمرير التلقائي
            setInterval(nextSlide, 5000);
        }
        
        function goToSlide(index) {
            currentSlide = index;
            updateGallery();
        }
        
        function nextSlide() {
            currentSlide = (currentSlide + 1) % siteData.galleryImages.length;
            updateGallery();
        }
        
        function prevSlide() {
            currentSlide = (currentSlide - 1 + siteData.galleryImages.length) % siteData.galleryImages.length;
            updateGallery();
        }
        
        function updateGallery() {
            const gallerySlider = document.getElementById('gallerySlider');
            const dots = document.querySelectorAll('.dot');
            
            gallerySlider.style.transform = `translateX(-${currentSlide * 100}%)`;
            
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSlide);
            });
        }

        // أزرار الاتصال
        function initContactButtons() {
            // الهاتف
            document.getElementById('phoneBtn').addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('phoneModal').style.display = 'flex';
            });
            
            // فيسبوك
            document.getElementById('facebookBtn').addEventListener('click', function(e) {
                e.preventDefault();
                window.open(siteData.facebook, '_blank');
            });
            
            document.getElementById('socialFb').addEventListener('click', function(e) {
                e.preventDefault();
                window.open(siteData.facebook, '_blank');
            });
            
            // انستقرام
            document.getElementById('instagramBtn').addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('instagramModal').style.display = 'flex';
            });
            
            document.getElementById('socialInsta').addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('instagramModal').style.display = 'flex';
            });
            
            // الموقع
            document.getElementById('locationBtn').addEventListener('click', function(e) {
                e.preventDefault();
                window.open(siteData.location, '_blank');
            });
            
            document.getElementById('socialLoc').addEventListener('click', function(e) {
                e.preventDefault();
                window.open(siteData.location, '_blank');
            });
            
            // NFC
            document.getElementById('nfcBtn').addEventListener('click', function(e) {
                e.preventDefault();
                window.open(siteData.nfc, '_blank');
            });
            
            // إغلاق النوافذ
            document.getElementById('closePhone').addEventListener('click', function() {
                document.getElementById('phoneModal').style.display = 'none';
            });
            
            document.getElementById('closeInsta').addEventListener('click', function() {
                document.getElementById('instagramModal').style.display = 'none';
            });
            
            // إغلاق عند النقر خارج النافذة
            window.addEventListener('click', function(e) {
                if (e.target === document.getElementById('phoneModal')) {
                    document.getElementById('phoneModal').style.display = 'none';
                }
                if (e.target === document.getElementById('instagramModal')) {
                    document.getElementById('instagramModal').style.display = 'none';
                }
            });
        }

        // التمرير السلس
        function initSmoothScroll() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    if (href === '#') return;
                    
                    const target = document.querySelector(href);
                    if (target) {
                        e.preventDefault();
                        window.scrollTo({
                            top: target.offsetTop - 80,
                            behavior: 'smooth'
                        });
                        
                        // إغلاق القائمة المتنقلة
                        document.getElementById('mainNav').classList.remove('active');
                        document.getElementById('menuBtn').innerHTML = '<i class="fas fa-bars"></i>';
                    }
                });
            });
        }
    </script>
</body>
</html>
